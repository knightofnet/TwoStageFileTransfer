<Window x:Class="TwoStageFileTransferGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwoStageFileTransferGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="560" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Frame x:Name="mainFrame" Margin="10,0,10,0"  />

        <Rectangle Fill="#FFF4F4F5" Margin="0,0.4,-0.4,0" Grid.Row="1" StrokeThickness="0"/>


        <Button x:Name="btnPrev" Content="Précédent" Margin="0,0,100,0" Grid.Row="1" VerticalAlignment="Center" Height="23" Click="btnPrev_Click" HorizontalAlignment="Right" Width="75"/>
        <Button x:Name="btnNext" Content="Suivant" Margin="440,0,10,0" Grid.Row="1" VerticalAlignment="Center" Height="23" Click="btnNext_Click" HorizontalAlignment="Right" Width="75" />


    </Grid>
</Window>
