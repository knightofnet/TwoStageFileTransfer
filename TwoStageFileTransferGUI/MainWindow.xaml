<Window x:Class="TwoStageFileTransferGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwoStageFileTransferGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="525" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Button x:Name="btnPrev" Content="Précédent" Margin="0,0,90,0" Grid.Row="1" VerticalAlignment="Center" Height="23" HorizontalAlignment="Right" Width="75" Click="btnPrev_Click"/>
        <Button x:Name="btnNext" Content="Suivant" Margin="440,0,10,0" Grid.Row="1" VerticalAlignment="Center" Height="23" Click="btnNext_Click"/>

        <Frame x:Name="mainFrame" Margin="20,0,0,0" />

    </Grid>
</Window>
